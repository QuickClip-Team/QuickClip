<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_viewSET="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_viewINFO"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_status"
    card_viewSET:cardElevation="2dp"
    android:layout_marginTop="100dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingStart="35dp">

        <EditText
            android:id="@+id/eT_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="4"
            android:textSize="18sp"
            android:hint="@string/pin_code"
            android:textColorHint="?android:attr/textColorSecondaryInverseNoDisable"
            android:text="111111"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />
        <Switch
            android:id="@+id/switch_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchTextAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignParentEnd="true"
            android:checked="true"
            android:paddingEnd="15dp"
            android:layout_below="@+id/eT_code" />
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toggle_notification"
            android:textSize="14sp"
            android:textStyle="bold"
            android:clickable="false"
            android:layout_below="@+id/eT_code" />
        <TextView
            android:text="@string/notification_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_notify_expl"
            android:layout_below="@+id/tv_description"
            android:layout_marginBottom="15dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>